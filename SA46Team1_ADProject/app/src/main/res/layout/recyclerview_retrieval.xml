<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textView_retrieval_itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/textView_retrieval_binLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            app:layout_constraintTop_toBottomOf="@id/textView_retrieval_itemDescription"
            app:layout_constraintLeft_toLeftOf="@id/textView_retrieval_itemDescription"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textView_retrieval_binNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bin"
            app:layout_constraintTop_toBottomOf="@id/textView_retrieval_binLocation"
            app:layout_constraintLeft_toLeftOf="@id/textView_retrieval_binLocation"
            android:layout_marginRight="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textView_retrieval_collectionPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity Retrieved: "
            app:layout_constraintTop_toBottomOf="@id/textView_retrieval_binNumber"
            app:layout_constraintLeft_toLeftOf="@id/textView_retrieval_binNumber"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/textView_retrieval_itemsRetrieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stationery Store"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="32dp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="5dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>