<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Department.RequisitionHistoryDetailsActivity">


    <LinearLayout
        android:id="@+id/linearLayout_requisition_history_detail_table_layout_header"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Description"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="2.5"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:text="UoM"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:text="Qty Ord."
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:text="Qty Del."
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:text="Qty BkOrd."
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_horizontal_line_requisition_history_detail"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginTop="4dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_requisition_history_detail_table_layout_header">
    </View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_requisition_history_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_horizontal_line_requisition_history_detail"
        tools:listitem="@layout/recyclerview_requisition_history_detail"
        />

    <ProgressBar
        android:id="@+id/progressbar_requisition_history_detail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />






</android.support.constraint.ConstraintLayout>