<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/view_horizontal_line_disbursement_detail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_disbursement_detail_item_description"
                    android:text="Clips Double 1"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView_disbursement_detail_item_uom"
                    android:text="Dozen"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView_disbursement_detail_quantity_ordered"
                    android:text="2"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView_disbursement_detail_quantity_received"
                    android:text="2"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:textAlignment="center" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>