<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_requisition_history_requisition_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:text="SR-1"
        android:textAppearance="?android:textAppearanceLarge"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView_requisition_history_requisition_date_requested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_requisition_history_requisition_id"
        app:layout_constraintLeft_toLeftOf="@id/textView_requisition_history_requisition_id"
        android:layout_marginTop="6dp"
        android:text="14/07/2018"
        android:textAppearance="?android:textAppearanceMedium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView_requisition_history_approval_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_requisition_history_requisition_date_requested"
        app:layout_constraintLeft_toLeftOf="@id/textView_requisition_history_requisition_date_requested"
        android:layout_marginTop="6dp"
        android:paddingBottom="6dp"
        android:text="Pending"
        android:textAppearance="?android:textAppearanceMedium"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <View
        android:id="@+id/view_horizontal_line_requisition_history"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginTop="4dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/textView_requisition_history_approval_status">
    </View>


</android.support.constraint.ConstraintLayout>