<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textView_dialog_adjust_qty_received_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Book"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="41dp" />

    <View
        android:id="@+id/view_horizontal_line_dialog_adjust_qty_received"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_marginTop="6dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/textView_dialog_adjust_qty_received_item_description">
    </View>

    <TextView
        android:id="@+id/textView_dialog_adjust_qty_received_item_qty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Quantity Received"
        android:layout_marginTop="12dp"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintTop_toBottomOf="@id/textView_dialog_adjust_qty_received_item_description"
        app:layout_constraintLeft_toLeftOf="@id/textView_dialog_adjust_qty_received_item_description"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="41dp" />

    <Spinner
        android:id="@+id/spinner_dialog_adjust_qty_received"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView_dialog_adjust_qty_received_item_qty_label"
        app:layout_constraintLeft_toLeftOf="@id/textView_dialog_adjust_qty_received_item_qty_label"
        android:layout_marginLeft="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="88dp" />

    <Button
        android:id="@+id/button_dialog_adjust_qty_received_submit"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_dialog_adjust_qty_received"
        app:layout_constraintLeft_toLeftOf="@id/spinner_dialog_adjust_qty_received"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>